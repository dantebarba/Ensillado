<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_main"
                android:background="@drawable/cedicabackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="ar.edu.unlp.laboratorio.ensillado.activity.MainActivity"
                tools:showIn="@layout/activity_main">

    <ImageView
        android:src="@android:drawable/screen_background_light_transparent"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:id="@+id/elemento_mostrado"
        android:layout_marginStart="33dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/elemento_mostrado"
        android:layout_marginBottom="81dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado2"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/elemento_mostrado"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado6"
        android:layout_alignTop="@+id/elemento_mostrado5"
        android:layout_alignStart="@+id/elemento_mostrado4" />

    <ImageView
        android:src="@drawable/ninguno"
        android:id="@+id/imagen_caballo"
        android:cropToPadding="false"
        android:layout_width="512dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/elemento_mostrado"
        android:layout_marginStart="163dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado4"
        android:layout_alignTop="@+id/elemento_mostrado"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado3"
        android:layout_alignTop="@+id/elemento_mostrado2"
        android:layout_alignStart="@+id/elemento_mostrado4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado2"
        android:layout_toStartOf="@+id/imagen_caballo"
        android:layout_marginEnd="29dp"
        android:id="@+id/texto_elemento2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado"
        android:layout_alignEnd="@+id/texto_elemento2"
        android:id="@+id/texto_elemento"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado4"
        android:layout_alignEnd="@+id/texto_elemento3"
        android:id="@+id/texto_elemento4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado6"
        android:layout_alignEnd="@+id/texto_elemento4"
        android:id="@+id/texto_elemento6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado3"
        android:layout_alignEnd="@+id/elemento_mostrado3"
        android:layout_marginEnd="24dp"
        android:id="@+id/texto_elemento3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elemento_mostrado6"
        android:layout_alignEnd="@+id/texto_elemento"
        android:id="@+id/texto_elemento5"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ar.edu.unlp.laboratorio.ensillado.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:src="@drawable/ninguno"
        android:id="@+id/imagen_caballo"
        android:cropToPadding="false"
        android:layout_width="512dp"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado2"
        android:adjustViewBounds="false"
        android:layout_alignTop="@+id/elemento_mostrado5"
        android:layout_alignStart="@+id/imagen_caballo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado5"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/cabezada"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/elemento_mostrado"
        android:layout_alignTop="@+id/elemento_mostrado5"
        android:layout_alignEnd="@+id/imagen_caballo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imagen_caballo"
        android:layout_marginTop="106dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado3"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignEnd="@+id/imagen_caballo" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/screen_background_light_transparent"
        android:id="@+id/elemento_mostrado4"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignStart="@+id/elemento_mostrado5" />

</RelativeLayout>

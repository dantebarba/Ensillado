<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ar.edu.unlp.laboratorio.ar.laboratorio">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cedicalogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ar.edu.unlp.laboratorio.ensillado.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="ar.edu.unlp.laboratorio.ensillado.activity.PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>
    <uses-permission
        android:name="android.permission.VIBRATE"></uses-permission>

</manifest>